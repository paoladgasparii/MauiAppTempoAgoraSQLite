<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppTempoAgoraSQLite.Views.RemoverTempo"
             Title="Remover Tempo">

    <ContentPage.ToolbarItems>
        <!-- Item da barra de ferramentas para confirmar a remoção -->
        <ToolbarItem Text="Confirmar Remoção" Clicked="ToolbarItem_Clicked_Confirmar" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Barra de pesquisa para filtrar os tempos -->
            <SearchBar x:Name="txt_search" 
                       Placeholder="Buscar por cidade ou descrição" 
                       TextChanged="txt_search_TextChanged"
                       Margin="0,0,0,10"/>

            <!-- Frame contendo a lista de tempos com checkboxes -->
            <Frame Padding="10" 
                   BackgroundColor="White" 
                   BorderColor="LightGray" 
                   CornerRadius="10"
                   HasShadow="True">

                <CollectionView x:Name="cv_tempos" 
                               SelectionMode="Multiple"
                               SelectionChanged="cv_tempos_SelectionChanged">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10" 
                                  RowDefinitions="Auto,Auto,Auto" 
                                  ColumnDefinitions="Auto,*,Auto"
                                  BackgroundColor="White">

                                <!-- Checkbox para seleção -->
                                <CheckBox Grid.Row="0" Grid.Column="0" 
                                         x:Name="chk_selecionar"
                                         VerticalOptions="Center"
                                         CheckedChanged="CheckBox_CheckedChanged"/>

                                <!-- Informações principais do tempo -->
                                <StackLayout Grid.Row="0" Grid.Column="1" 
                                           Margin="10,0,0,0"
                                           VerticalOptions="Center">
                                    <Label Text="{Binding cidade}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="Black"/>
                                    <Label Text="{Binding description}" 
                                           FontSize="14" 
                                           TextColor="Gray"/>
                                </StackLayout>

                                

                                <!-- Separador -->
                                <BoxView Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                        Height="1" 
                                        BackgroundColor="LightGray" 
                                        Margin="0,10,0,0"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Frame>

            <!-- Informações sobre seleção -->
            <Label x:Name="lbl_selecionados" 
                   Text="Nenhum item selecionado" 
                   FontSize="14" 
                   TextColor="Gray" 
                   HorizontalOptions="Center"/>

            <!-- Botões de ação -->
            <StackLayout Orientation="Horizontal" 
                        HorizontalOptions="Center" 
                        Spacing="20"
                        Margin="0,20,0,0">

                <Button Text="Remover Selecionados" 
                        Clicked="Button_Clicked_RemoverSelecionados"
                        BackgroundColor="Red"
                        TextColor="White"
                        CornerRadius="20"
                        Padding="20,10"/>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>